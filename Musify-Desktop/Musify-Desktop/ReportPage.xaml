<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Musify_Desktop"
        xmlns:MusiFy_Library="clr-namespace:MusiFy_Library;assembly=MusiFy-Library" x:Class="Musify_Desktop.ReportPage"
        mc:Ignorable="d"
        Background="#091227" 
        Title="ReportPage" Height="450" Width="800">



    <Viewbox Stretch="Fill" StretchDirection="Both" >

        <Grid Width="800" Height="450">


        <StackPanel HorizontalAlignment="Left" Width="460" Height="400" Margin="20 ,20 ,0 ,20">
            <ScrollViewer  Height="200" Margin="10, 10, 10, 10">
                <StackPanel x:Name="ButtonsContainer">

                </StackPanel>
            </ScrollViewer>



                <ListBox MouseMove="ListaPDF_MouseMove"  AllowDrop="True" FontSize="20" x:Name="ListaPDF" BorderBrush="Black" BorderThickness="1"  Background="#9DADD4" Height="170" Margin="10, 0, 10, 10"></ListBox>



        </StackPanel>





        <StackPanel>
            <MusiFy_Library:pdfSigner  HorizontalAlignment="Left" Margin="510,0,0,0" VerticalAlignment="Top"/>
        </StackPanel>


    </Grid>

    </Viewbox>



</Window>
