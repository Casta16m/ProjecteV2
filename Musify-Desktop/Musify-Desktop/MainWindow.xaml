<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Musify_Desktop"
        xmlns:MusiFy_Library="clr-namespace:MusiFy_Library;assembly=MusiFy-Library" x:Class="Musify_Desktop.MainWindow"
        mc:Ignorable="d"
        Background="#091227" 
        Title="MainWindow" Height="450" Width="800">


    <Viewbox VerticalAlignment="Center">
        <Grid Width="800" Height="450">
            <Label Content="MusiFy" HorizontalAlignment="Center" Margin="10,10,0,0" VerticalAlignment="Top" Foreground="#FFD8D8D8" FontSize="40" FontFamily="Poppins" FontWeight="Bold"/>

            <MusiFy_Library:Button Click="ReportButton_Click"  x:Name="ReportButton" WidthButton="250" HeightButton="80" ImageSize="75" WidthGrid="160"  TextSize="35"  Text="Informes"   HorizontalAlignment="Left" Margin="130,161,0,0" VerticalAlignment="Top"/>
            <MusiFy_Library:Button  x:Name="AdminButton" WidthButton="250" HeightButton="80"  ImageSize="70"   Text="Admin" TextSize="35" WidthGrid="140" HorizontalAlignment="Left" Margin="405,161,0,0" VerticalAlignment="Top"/>
            <Frame x:Name="MainFrame"></Frame>
        </Grid>

    </Viewbox>
    
</Window>
